{
    "name": "peteb/plain-sdk-php",
    "description": "PHP SDK for Plain",
    "type": "library",
    "require": {
        "php": "^8.1",
        "arxy/graphql-codegen": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^3.0",
        "guzzlehttp/guzzle": "^7.8",
        "guzzlehttp/psr7": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "php-http/mock-client": "^1.6"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "generate": "php generate.php"
    },
    "autoload": {
        "psr-4": {
            "Plain\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Plain\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
